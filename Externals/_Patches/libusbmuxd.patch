+static char* remote_ip = "";
+static uint16_t remote_port = 0;
+static boolean use_remote = 0;
+void usbmuxd_connect_remote(const char* ip_address, uint16_t port)
+{
+    remote_ip = strdup(ip_address);
+    remote_port = port;
+    use_remote = 1;
+}
+void usbmuxd_disconnect_remote()
+{
+    free(remote_ip);
+    remote_port = 0;
+    use_remote = 0;
+}
